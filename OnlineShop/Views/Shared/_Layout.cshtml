<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Twitter Bootstrap shopping cart</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Bootstrap styles -->
    <link href="/Content/client/assets/css/bootstrap.css" rel="stylesheet" />
    <!-- Customize styles -->
    <link href="/Content/client/style.css" rel="stylesheet" />
    <!-- font awesome styles -->
    <link href="/Content/client/assets/font-awesome/css/font-awesome.css" rel="stylesheet">
    <!--[if IE 7]>
        <link href="css/font-awesome-ie7.min.css" rel="stylesheet">
    <![endif]-->
    <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <!-- Favicons -->
    <link rel="shortcut icon" href="/Content/client/assets/ico/favicon.ico">
</head>
<body>
    @Html.Action("TopMenu", "Home")
    <!--
    Lower Header Section
    -->
    <div class="container">
        <div id="gototop"> </div>
        <header id="header">
            <div class="row">
                <div class="span4">
                    <h1>
                        <a class="logo" href="/">
                            <span>Twitter Bootstrap ecommerce template</span>
                            <img src="/Content/client/assets/img/logo-bootstrap-shoping-cart.png" alt="bootstrap sexy shop">
                        </a>
                    </h1>
                </div>
                <div class="span4">                  
                </div>
                <div class="span4 alignR">
                    <p><br> <strong> Support (24/7) :  0800 1234 678 </strong><br><br></p>
                    @Html.Action("CartQuantity", "Cart")
                    <span class="btn btn-warning btn-mini">$</span>
                    <span class="btn btn-mini">&pound;</span>
                    <span class="btn btn-mini">&euro;</span>
                </div>
            </div>
        </header>
        @Html.Action("MainMenu", "Home")
        <!--
    Body Section
    -->
            @RenderSection("sidebar", required: false)
            @RenderBody()
        <!--
    Clients
    -->
        <section class="our_client">
            <hr class="soften" />
            <h4 class="title cntr"><span class="text">Manufactures</span></h4>
            <hr class="soften" />
            <div class="row">
                <div class="span2">
                    <a href="#"><img alt="" src="/Content/client/assets/img/1.png"></a>
                </div>
                <div class="span2">
                    <a href="#"><img alt="" src="/Content/client/assets/img/2.png"></a>
                </div>
                <div class="span2">
                    <a href="#"><img alt="" src="/Content/client/assets/img/3.png"></a>
                </div>
                <div class="span2">
                    <a href="#"><img alt="" src="/Content/client/assets/img/4.png"></a>
                </div>
                <div class="span2">
                    <a href="#"><img alt="" src="/Content/client/assets/img/5.png"></a>
                </div>
                <div class="span2">
                    <a href="#"><img alt="" src="/Content/client/assets/img/6.png"></a>
                </div>
            </div>
        </section>

        <!--
    Footer
    -->
        <footer class="footer">
            @Html.Action("Footer", "Home")
        </footer>
        <!-- Placed at the end of the document so the pages load faster -->
    </div><!-- /container -->

    <div class="copyright">
        <div class="container">
            <p class="pull-right">
                <a href="#"><img src="/Content/client/assets/img/maestro.png" alt="payment"></a>
                <a href="#"><img src="/Content/client/assets/img/mc.png" alt="payment"></a>
                <a href="#"><img src="/Content/client/assets/img/pp.png" alt="payment"></a>
                <a href="#"><img src="/Content/client/assets/img/visa.png" alt="payment"></a>
                <a href="#"><img src="/Content/client/assets/img/disc.png" alt="payment"></a>
            </p>
            <span>Copyright &copy; 2013<br> bootstrap ecommerce shopping template</span>
        </div>
    </div>
    <a href="#" class="gotop"><i class="icon-double-angle-up"></i></a>

    <script src="/Content/client/assets/js/jquery.js"></script>
    <script src="/Content/client/assets/js/bootstrap.min.js"></script>
    <script src="/Content/client/assets/js/jquery.easing-1.3.min.js"></script>
    <script src="/Content/client/assets/js/jquery.scrollTo-1.4.3.1-min.js"></script>
    <script src="/Content/client/assets/js/shop.js"></script>
    @RenderSection("jsFooter", required: false)
</body>
</html>